{
  "name" : "sandbox",
  "chef_type" : "role",
  "json_class" : "Chef::Role",
  "description" : "Sandbox for rails application",
  "run_list" : [
    "recipe[apt]",
    "recipe[rvm::system]",
    "recipe[rvm::vagrant]",
    "recipe[mysql]",
    "recipe[nginx]"
  ],
  "override_attributes" : {
    "rvm" : {
        "global_gems": [
            {"name": "bundler"},
            {"name": "rails"},
            {"name": "rubygems-bundler", "action": "remove"}
        ],
        "rubies": [
          "1.9.3-p194"
        ]
    }
  }
}
